<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.presentech.handsup.presentationfile.ExampleStackedBars">
    <LinearLayout
        android:id="@+id/barLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <View
            android:id="@+id/greenLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF00">
        </View>

        <View
            android:id="@+id/yellowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF00">

        </View>
        <View
            android:id="@+id/redLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0000">
        </View>
        <View
            android:id="@+id/dummyBar"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
        </View>
    </LinearLayout>




    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3">
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="increaseA"
            android:text="G+"
            android:layout_column="0"
            android:layout_row="0" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="decreaseA"
            android:text="G-"
            android:layout_column="0"
            android:layout_row="1" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="increaseB"
            android:text="Y+"
            android:layout_column="1"
            android:layout_row="0" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="decreaseB"
            android:text="Y-"
            android:layout_column="1"
            android:layout_row="1" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="increaseC"
            android:text="R+"
            android:layout_column="2"
            android:layout_row="0" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="decreaseC"
            android:text="R-"
            android:layout_column="2"
            android:layout_row="1" />
    </GridLayout>


</RelativeLayout>