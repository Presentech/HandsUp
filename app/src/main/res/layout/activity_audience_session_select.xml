<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audience_session_select_drawerFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    ​
    ​
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        ​
        ​
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundgrey"
            xmlns:android="http://schemas.android.com/apk/res/android">
            ​
            ​
            <RelativeLayout
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:theme="@style/AppThemeNoActionBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_audience_session_select"
                tools:context="com.presentech.handsup.AudienceSessionSelect">
                ​
                ​
                <Button
                    android:id="@+id/button1"
                    style="@style/audienceSessionSelectButton"
                    android:text="Analogue Filters"
                    android:clickable="true"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@mipmap/wifi_icon1"
                    android:drawableRight="@mipmap/arrowright"
                    android:onClick="textView1Expand"/>
                ​
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/darkgrey"
                    android:text="J.Everard\n P/L/002\n 14:00 - 15:00\n"
                    android:layout_below="@+id/button1"
                    android:padding="10dp"
                    android:clickable="true"/>
                ​
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECT"
                    android:textSize="15sp"
                    android:background="@color/presentechBlue"
                    android:id="@+id/connectButton1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView1"
                    android:layout_alignEnd="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:clickable="true"
                    android:onClick="feedbackActivity"/>
                ​
                <Button
                    android:id="@+id/button2"
                    style="@style/audienceSessionSelectButton"
                    android:text="Design and Construction"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView1"
                    android:drawableStart="@mipmap/wifi_icon1"
                    android:drawableRight="@mipmap/arrowright"
                    android:clickable="true"
                    android:onClick="textView2Expand"/>
                ​
                <TextView
                    android:id="@+id/slideTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/darkgrey"
                    android:text="D.Chesmore\n V/045\n 12:00 - 13:00\n"
                    android:layout_below="@+id/button2"
                    android:padding="10dp"
                    android:clickable="true"/>
                ​
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECT"
                    android:textSize="15sp"
                    android:background="@color/presentechBlue"
                    android:id="@+id/connectButton2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/slideTitleTextView"
                    android:layout_alignEnd="@+id/slideTitleTextView"
                    android:layout_alignBottom="@+id/slideTitleTextView"
                    android:clickable="true"
                    android:onClick="feedbackActivity"/>
                ​
                <Button
                    android:id="@+id/button3"
                    style="@style/audienceSessionSelectButton"
                    android:text="Physical Modelling"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/slideTitleTextView"
                    android:drawableStart="@mipmap/wifi_icon1"
                    android:drawableRight="@mipmap/arrowright"
                    android:clickable="true"
                    android:onClick="textView3Expand"/>
                ​
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/darkgrey"
                    android:text="D.Murphy\n D/L/036\n 9:00 - 10:00\n"
                    android:layout_below="@+id/button3"
                    android:padding="10dp"
                    android:clickable="true"/>
                ​
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECT"
                    android:textSize="15sp"
                    android:background="@color/presentechBlue"
                    android:id="@+id/connectButton3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_alignEnd="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:clickable="true"
                    android:onClick="feedbackActivity"/>
                ​
                <Button
                    android:id="@+id/button4"
                    style="@style/audienceSessionSelectButton"
                    android:text="Software Engineering"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView3"
                    android:drawableStart="@mipmap/wifi_icon1"
                    android:drawableRight="@mipmap/arrowright"
                    android:clickable="true"
                    android:onClick="textView4Expand"/>
                ​
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/darkgrey"
                    android:text="S.Porter\n P/L/001\n 10:00 - 11:00\n"
                    android:layout_below="@+id/button4"
                    android:padding="10dp"
                    android:clickable="true"/>
                ​
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECT"
                    android:textSize="15sp"
                    android:background="@color/presentechBlue"
                    android:id="@+id/connectButton4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_alignEnd="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:clickable="true"
                    android:onClick="feedbackActivity"/>
                ​
                <Button
                    android:id="@+id/button5"
                    style="@style/audienceSessionSelectButton"
                    android:text="Antennas and Propagation"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView4"
                    android:drawableStart="@mipmap/wifi_icon1"
                    android:drawableRight="@mipmap/arrowright"
                    android:clickable="true"
                    android:onClick="textView5Expand"/>
                ​
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/darkgrey"
                    android:text="A.Marvin\n P/X/001\n 12:00 - 13:00\n"
                    android:layout_below="@+id/button5"
                    android:padding="10dp"
                    android:clickable="true"/>
                ​
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECT"
                    android:textSize="15sp"
                    android:background="@color/presentechBlue"
                    android:id="@+id/connectButton5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_alignEnd="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:clickable="true"
                    android:onClick="feedbackActivity"/>
                ​
                ​
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
    ​
    ​
    <ListView
        android:theme="@style/DrawerTheme"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/audience_session_select_leftDrawer"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/presentechBlue"
        android:dividerHeight="1dp"
        android:background="@color/backgroundgrey">
        ​
    </ListView>
    ​
</android.support.v4.widget.DrawerLayout>