<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/presentechBlue</item>
        <item name="colorPrimaryDark">@color/darkgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="DrawerTheme" parent="@android:style/Widget.ListView">
        <!--Drawer Theme used to change text colour to white. ListView has no textColor attribute -->
        <item name="android:textColor">@color/textColour</item>
    </style>
    <style name="AppThemeNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- THEME USED FOR contsel ACTIVITY ONLY -->
        <item name="colorPrimary">@color/presentechBlue</item>
        <item name="colorPrimaryDark">@color/darkgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="HandsUp" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/presentechBlue</item>
        <item name="colorPrimaryDark">@color/darkgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>
    
    <style name="tutorialTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="android:background">@color/darkgrey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawableRight">@mipmap/arrow</item>
    </style>
    <style name="tutorialContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="android:background">@color/darkgrey</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="HandsUp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HandsUp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HandsUp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/textColour</item>
        <item name="android:background">@color/darkgrey</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="audienceSessionSelectButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundgrey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
